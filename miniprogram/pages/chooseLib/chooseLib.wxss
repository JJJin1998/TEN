.selectBox {
  width: 120rpx;
  height:200rpx;
  position: absolute;
  background-color: red;
  left: 0;
  top: 0;
}
.date-box {
  display: flex;
  flex-direction: row;
  position: relative;
  left: -91rpx;
  top: -24rpx;
}
.date {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #dbdbdb;
  border-radius: 33rpx;
  background: rgb(243, 115, 30);
  color: #fff;
  
  background-repeat: no-repeat;
  background-position: 9rpx 9rpx;
}
.age {
  width: 440rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 15px;
  margin-left: 13rpx;
