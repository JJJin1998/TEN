
.back-btn{
  text-align: center;
  line-height: 30rpx;
  background-color: rgb(243, 115, 30);
  font-size: 20rpx;
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  right: 20rpx;
  bottom: 50rpx;
  border-radius: 50%;

}

.back-btn text{
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}


.text-back{
  margin: 80% auto;
  color: white;
}


.back-btn::after{
border: 0;
}


.clearfix{
  zoom: 1;
}
.clearfix:after{
  content:'';
  display: table;
  clear:both;
}
.hide{
  display: none !important;
}
.container {
  height: 100%;  
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
  font-size: 14px;
  
  color: #333;
}
.film-item{
  padding: 5px;
  display: flex;
}
.film-image{
  width: 128px;
}
.film-image image{
  width: 100%;
  height: 180px;
}
.film-info{
  padding-left: 10px;
  flex: 1;
}
.film-info view{
  margin-bottom: 10px;
}
.film-info .label{
  margin-right: 5px;
  color: #666;
}
.film-info .rating{
  color: #e09015;
}
.film-title{
 font-size: 14px;
 margin-right: 10px;
}
.film-year{
  font-size: 12px;
  color: #999;
}
.person{
  margin-right: 10px;
  margin-left: 10px;
  font-size: 12px;
}
